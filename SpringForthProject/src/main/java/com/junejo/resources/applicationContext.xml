<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		
    <!-- bean definitions here -->
 <!--		by using setter method 
    <bean class="com.junejo.beans.Address" id="addId">
   	<property name="houseno" value="78"/>
   	<property name="city" value="Tando Bago"/>
   	<property name="pincode" value="8732"/>
   
   </bean>
    
   <bean class="com.junejo.beans.Student" id="stdId">
   	<property name="name" value="Abu Hurera"/>
   	<property name="rollno" value="897"/>
   	<property name="address" ref="addId"/>
   
   </bean>
    --> 
	
	<!--		by using constructor 	-->
    <bean class="com.junejo.beans.Address" id="addId">
   	<constructor-arg value="79"/>
   	<constructor-arg value="Badin"/>
   	<constructor-arg value="8877"/>
   </bean>
    
   <bean class="com.junejo.beans.Student" id="stdId">
   	<constructor-arg value="Aslam"/>
   	<constructor-arg value="50"/>
   	<constructor-arg ref="addId"/>
   
   </bean>
</beans>